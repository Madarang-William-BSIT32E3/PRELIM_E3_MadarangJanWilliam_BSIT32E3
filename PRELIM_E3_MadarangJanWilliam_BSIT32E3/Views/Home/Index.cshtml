        .display-name {
            font-size: 3em; /* Increase font size */
            margin-bottom: 20px; /* Increase margin for spacing */
        }

        .course-section {
            font-size: 2em; /* Increase font size */
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header>
        <!-- Your navbar code here -->
    </header>

    <div class="content">
        <h1 class="display-name">Jan William Madarang</h1>
        <p class="course-section">BSIT-32E3</p>
    </div>
