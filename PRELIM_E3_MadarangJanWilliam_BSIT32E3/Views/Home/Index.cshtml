@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url(https://img.freepik.com/free-vector/creative-geometric-design-space_53876-89787.jpg?w=1380&t=st=1710557075~exp=1710557675~hmac=3ec1c7f3d8710a9d3dabfdffa1148b3e7bd32e218739b19c5a63a01d3484a2d8); /* Replace 'your-image-url.jpg' with the URL of your desired image */
